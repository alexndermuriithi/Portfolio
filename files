using namespace std;

void singleLineEntry (){
        ofstream myfile ("example.txt"); // this is how you create a new file
//        myfile << "this is a new file" << endl;
        cout << "add something to the file" << endl;
        string text;
        getline(cin, text); // getline is used to capture sentances.
//        cin.ignore(); // only reqired if cin and getline() are used sequentially
        myfile << text << endl;
        myfile.close();
        cout << "///////////////// end of single line entry ////////////////" << endl;
}
