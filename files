void clearingAFile (){
    ofstream openfile;
    openfile.open ("example.txt");
    openfile << "" << endl;
    openfile.close();
    
    ofstream openfile1;
    openfile1.open ("example1.txt");
    openfile1 << "" << endl;
    openfile1.close();
}
